# Neural Mesh Pipeline Environment Configuration
# Copy this file to .env and fill in your values

# Required: OpenAI API Key for AI-powered code repair
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: AI Model Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.1

# Optional: Retry Logic Configuration
MAX_RETRIES=3
BASE_DELAY=1.0
MAX_DELAY=10.0
JITTER_RANGE=0.1

# Optional: Test Configuration
TEST_TIMEOUT=300

# Optional: Pipeline Configuration
MAX_REPAIR_ATTEMPTS=2
CYCLE_INTERVAL=600

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Notification Configuration (uncomment to enable)
# SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# EMAIL_ALERTS=true
# EMAIL_FROM=pipeline@example.com
# EMAIL_TO=admin@example.com
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
